<!-- Flash Messages -->
<div class="flash-messages-container">
    <% if (typeof success !== 'undefined' && success && success.length) { %>
        <div class="alert alert-success fade show clickable-alert" role="alert" onclick="closeAlert(this)">
            <div class="alert-text"><%= success %></div>
        </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error && error.length) { %>
        <div class="alert alert-danger fade show clickable-alert" role="alert" onclick="closeAlert(this)">
            <div class="alert-text"><%= error %></div>
        </div>
    <% } %>
</div>

<script>
// Function to close alert when clicked
function closeAlert(alertElement) {
    alertElement.style.opacity = '0';
    alertElement.style.transform = 'translateY(-20px)';
    setTimeout(() => {
        alertElement.remove();
    }, 300);
}

// Auto-close alerts after 5 seconds
document.addEventListener('DOMContentLoaded', function() {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
        setTimeout(() => {
            if (alert.parentNode) {
                closeAlert(alert);
            }
        }, 5000);
    });
});
</script>
